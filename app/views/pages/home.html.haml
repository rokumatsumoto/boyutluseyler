- content_for :head do
  = javascript_pack_tag 'design'

.design
  .design-photos
    .js-content-preview{ data: { behavior: 'vue' } }
      %content-preview-toggle-button
      %content-preview{ 'data-type': 'illustration', 'content-type': 'image',
        ':files': @illustrations.to_json, 'toggle-button-text': 'FOTOĞRAFLAR',
        ':active': true, 'img-alt-tag': 'Ücretsiz 3D baskı dosyaları' }
      %content-preview{ 'data-type': 'blueprint', 'content-type': 'model',
        ':file-extensions': %w[stl obj], ':files': @blueprints.to_json,
        'toggle-button-text': '3D GÖRÜNÜM', 'img-alt-tag': 'Ücretsiz 3D baskı dosyaları' }
      / %content-preview{ 'data-type': 'blueprint2', 'content-type': 'model',
      /   ':file-extensions': %w[stl obj], ':files': @blueprints2.to_json,
      /   'toggle-button-text': '3D GÖRÜNÜM', 'img-alt-tag': 'Ücretsiz 3D baskı dosyaları' }
  .design-infos
    .d-block sdfsfsfsd sdfsf

