.row.grid-divider
  .col-md-6.col-lg-6.px-lg-5
    %h5.card-title.text-center= t('.resend_unlock_instructions')
    .row.px-4
      .col.bg-light.text-resend-unlck-form.px-5.py-4
        = simple_form_for(resource, as: resource_name, url: unlock_path(resource_name),
        html: { method: :post }, validate: true) do |f|
          .form-inputs
            = f.input :email, required: true, autofocus: true, validate: true,
            input_html: { autocomplete: 'email', value: params[:user_email] }
          .form-actions
            = f.button :submit, t('.resend'), id: 'btn_resend_unlock',
            class: 'btn btn-info'
        .d-flex.py-4
          %hr.my-auto.flex-grow-1/
        = render partial: 'devise/shared/links', locals: { css_class: 'link-resend-unlck-form' }
  .col-md-6.col-lg-6.px-lg-5.mx-3.my-4.py-3.mx-sm-3.my-md-0.py-md-0.mx-md-0
    .row.mt-md-5.ml-md-2
      .col-12
        .row.mt-4
          .col-12
            %span Zaten kayıtlı mısınız?
          .col-12
            = link_to 'Buradan giriş yapabilirsiniz', new_user_session_path, class: 'link-light-resend-unlck-form'
