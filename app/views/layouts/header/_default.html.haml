.header
  %nav.navbar.navbar-default.navbar-light.navbar-expand-lg
    .container
      = link_to root_path, class: 'navbar-brand' do
        %i.fas.fa-cube.fa-2x
      %button.navbar-toggler{ :type => 'button', 'data-toggle' => 'collapse',
      'data-target' => '#navbar-responsive', 'aria-controls' => 'navbar-responsive',
      'aria-expanded' => 'false', 'aria-label' => 'Toggle navigation' }
        %span.navbar-toggler-icon
      .collapse.navbar-collapse#navbar-responsive
        %form.mx-2.my-auto.d-inline.w-50.search
          %input.form-control{ 'aria-label' => 'Search',
            placeholder: 'rick and morty, stranger things, v.s..', type: 'search' }/
        %ul.nav.navbar-nav.ml-auto
          %li.nav-item
            %a.nav-link.custom-link{ href: '#' } Yükle
          %li.nav-item
            %a.nav-link.custom-link{ href: '#' } Tasarımlar
          %li.nav-item
            %a.nav-link.custom-link{ href: '#' } Koleksiyonlar
          %li.nav-item.dropdown
            %a.nav-link.dropdown-user-toggle#navbar-dropdown{ :href => '#', :role => 'button',
             'data-toggle' => 'dropdown', 'aria-haspopup' => 'true', 'aria-expanded' => 'false' }
              %i.fas.fa-user.fa-lg
            .dropdown-menu.dropdown-menu-right{ 'aria-labelledby' => 'navbar-dropdown' }
              %a.dropdown-item{ :href => '#' } Profil
              %a.dropdown-item{ :href => '#' } Ayarlar
              %a.dropdown-item{ :href => '#' } Çıkış Yap






